<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="cardPane" onMouseClicked="#onProjectClick" prefHeight="165.0" prefWidth="300" styleClass="project-card" stylesheets="@../css/projectcard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unina.controller.components.ProjectCardController">

    <VBox layoutX="5.6" layoutY="7.2" prefHeight="157.0" prefWidth="290.0" spacing="10" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="6.0">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <Label fx:id="nomeProgetto" styleClass="project-title" />

        <HBox spacing="8">
            <Label styleClass="project-label" text="Titolo:" />
            <Label fx:id="titoloLabel" styleClass="project-value" />
        </HBox>

           <HBox prefHeight="71.0" prefWidth="268.0" spacing="8">
            <Label styleClass="project-label" text="Descrizione:" />
            <Label fx:id="descrizioneLabel" styleClass="project-value" />
        </HBox>

        <VBox prefHeight="24.0" prefWidth="270.0" spacing="5">
         <HBox prefHeight="71.0" prefWidth="268.0" spacing="8">
            <children>
               <Label styleClass="project-label" text="Tipo:" />
               <Label fx:id="tipoLabel" styleClass="project-value" />
            </children>
         </HBox>
        </VBox>
    </VBox>
</AnchorPane>
