<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" stylesheets="@css/mainpage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unina.controller.MainPageColtivatoreController">

    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="602.0" prefWidth="318.0" spacing="20" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="10" right="10" top="60" />
            </padding>

            <!-- Just a workaround, padding doesn't work properly. Need a refactor. -->
            <Label minHeight="36" text="" />
            <Button maxHeight="163.0" maxWidth="254.0" prefHeight="150.0" prefWidth="254.0" styleClass="logo">
            <graphic>
               <VBox alignment="CENTER" prefHeight="142.0" prefWidth="180.0">
                  <children>
                     <ImageView fitHeight="161.0" fitWidth="201.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/logo-removebg-preview.png" />
                        </image>
                     </ImageView>
                  </children>
               </VBox>
            </graphic>
            </Button>
         <Button fx:id="visualizeNotifiche" contentDisplay="LEFT" onAction="#goToVisualizeNotifiche" styleClass="sidebar-button" text="Notifiche">
            <graphic>
               <ImageView fitHeight="26.0" fitWidth="26.0" preserveRatio="true" smooth="true">
                  <image>
                     <Image url="@images/icons8-allarmi-50.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>

            <Pane VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="user-box">
                    <Button fx:id="profileButton" minHeight="48.0" minWidth="47.0" prefHeight="48.0" prefWidth="47.0" styleClass="profile-circle">
                  <graphic>
                     <ImageView fitHeight="56.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/icons8-account-di-prova-100.png" />
                        </image>
                     </ImageView>
                  </graphic></Button>

                    <VBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="142.0" spacing="2">
                        <Label fx:id="nomeCognomeLabel" styleClass="username-label" text="- - -  - " />
                        <Button fx:id="logoutButton" alignment="TOP_LEFT" contentDisplay="CENTER" onAction="#logout" prefHeight="30.0" prefWidth="66.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 10;" text="Logout" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font></Button>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <fx:include source="Home.fxml" />
    </center>
</BorderPane>
