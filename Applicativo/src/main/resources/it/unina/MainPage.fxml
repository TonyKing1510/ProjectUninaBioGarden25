<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" stylesheets="@css/mainpage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unina.controller.MainPageController">

    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="602.0" prefWidth="318.0" spacing="20" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="10" right="10" top="60" />
            </padding>

            <!-- Just a workaround, padding doesn't work properly. Need a refactor. -->
            <Label minHeight="36" text="" />
            <Button maxHeight="163.0" maxWidth="254.0" prefHeight="150.0" prefWidth="254.0" styleClass="logo">
            <graphic>
               <VBox alignment="CENTER" prefHeight="142.0" prefWidth="180.0">
                  <children>
                     <ImageView fitHeight="101.0" fitWidth="117.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/logoUninaBio.png" />
                        </image>
                     </ImageView>
                     <Label alignment="CENTER" prefHeight="39.0" prefWidth="152.0" style="-fx-background-color: TRANSAPRENT;" text="UNINA BIO GARDEN 25" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                        <font>
                           <Font name="Calibri Bold Italic" size="13.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
            </graphic>
            </Button>
            <Button fx:id="userPlantManagementButton" contentDisplay="LEFT" onAction="#goToPlantManagement" styleClass="sidebar-button" text="Lotti">
                <graphic>
                    <ImageView fitHeight="26.0" fitWidth="34.0" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/field.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="userManagementButton" contentDisplay="LEFT" onAction="#goToCultivator" styleClass="sidebar-button" text="Coltivatori">
                <graphic>
                    <ImageView fitHeight="26.0" fitWidth="26.0" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/peasant.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="statisticsButton" styleClass="sidebar-button" text="Andamento" />
            <Button fx:id="projectButton" contentDisplay="LEFT" onAction="#goToProject" styleClass="sidebar-button" text="Progetti">
                <graphic>
                    <ImageView fitHeight="26.0" fitWidth="26.0" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/project-management.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Pane VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="user-box">
                    <Button fx:id="profileButton" minHeight="48.0" minWidth="47.0" prefHeight="48.0" prefWidth="47.0" styleClass="profile-circle">
                  <graphic>
                     <ImageView fitHeight="56.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/iconAccount.png" />
                        </image>
                     </ImageView>
                  </graphic></Button>

                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label fx:id="nomeCognomeLabel" styleClass="username-label" text="- - -  - " />
                        <Button fx:id="logoutButton" alignment="BOTTOM_LEFT" styleClass="logout-button" text="â‡¦" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <fx:include source="Home.fxml" />
    </center>
</BorderPane>
